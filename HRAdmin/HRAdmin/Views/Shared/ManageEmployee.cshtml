@using HRAdmin.Models
@model Employee

@using (Html.BeginForm("CreateEmployee", "Employees"))
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    </head>
    <body>

        <div class="container">
            <h2>Adding new Employee</h2>
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse1">Details</a>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse">
                        <ul class="list-group">
                            <li width 100px;class="list-group-item">@Html.LabelFor(x => x.Name) @Html.TextBoxFor(x => x.Name)</li>
                            <li width 100px;class="list-group-item">@Html.LabelFor(x => x.Position) @Html.DropDownListFor(n => n.PositionId, new SelectList(ViewBag.Positions, "Id", "Name", 1), "Please select position")</li>
                            <li width 100px;class="list-group-item">@Html.LabelFor(x => x.Phone) @Html.TextBoxFor(x => x.Phone)</li>
                            <li width 100px;class="list-group-item">@Html.LabelFor(x => x.Project)@Html.TextBoxFor(x => x.Project)
                            <li width 100px;class="list-group-item">@Html.DropDownListFor(n => n.ProjectId, new SelectList(ViewBag.Projects, "Id", "Name", 1), "Please select a project")</li>
                            <li width 100px;class="list-group-item">@Html.LabelFor(x => x.Salary) @Html.TextBoxFor(x => x.Salary)</li>
                            <li width 100px;class="list-group-item">@Html.LabelFor(x => x.WorkPlace) @Html.TextBoxFor(x => x.WorkPlace)</li>
                            <li width 100px;class="list-group-item">@Html.LabelFor(x => x.Email) @Html.TextBoxFor(x => x.Email)</li>
                        </ul>
                        <input type="submit" value="Create">
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
}




